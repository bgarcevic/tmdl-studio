{
  "name": "tmdl-studio",
  "displayName": "TMDL Studio",
  "description": "Visualize dependencies between DAX measures in your TMDL files. Automatically generates an interactive graph to help you understand complex model structures and calculation flows within VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:tmdl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tmdl-studio.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "tmdl",
        "aliases": [
          "Tabular Model Definition Language",
          "TMDL",
          "tmdl"
        ],
        "extensions": [ ".tmdl", ".tmd" ],
        "configuration": "./config/tmdl-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tmdl",
        "scopeName": "source.tmdl",
        "path": "./syntaxes/tmdl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext .ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^10.2.0"
  }
}
